    <h1 class="display-4 font-weight-bold">Available Plans</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Planname</th>
                <th>Description</th>
                <th>Price</th>
                <th>Payment</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Planname</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>
                            <button class="btn btn-primary" data-toggle="modal" data-target="#buyModal"
                                    onclick="setPlanDetails('@item.Id', '@item.Price', '@item.Planname')">
                                Buy
                                
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No plans available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Payment -->
<div class="modal fade" id="buyModal" tabindex="-1" role="dialog" aria-labelledby="buyModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="purchaseForm" method="post" action="/Class/Purchase">
                <div class="modal-header">
                    <h5 class="modal-title" id="buyModalLabel">Complete Your Subscription</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="PlanId" id="PlanId" />
                    <input type="hidden" name="Price" id="Price" />

                    <div class="form-group">
                        <label for="PlanName">Plan Name</label>
                        <input type="text" class="form-control" id="PlanName" readonly />
                    </div>

                    <div class="form-group">
                        <label for="NumOfMonths">Number of Months</label>
                        <input type="number" class="form-control" name="NumOfMonths" id="NumOfMonths" required />
                    </div>

                    <div class="form-group">
                        <label for="CardNumber">Card Number</label>
                        <input type="text" class="form-control" name="CardNumber" id="CardNumber" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Complete Purchase</button>
                </div>
            </form>
        </div>
    </div>
    <div id="alertMessage" class="alert d-none" role="alert"></div>

</div>

<script>
    function setPlanDetails(id, price, name) {
        document.getElementById('PlanId').value = id;
        document.getElementById('Price').value = price;
        document.getElementById('PlanName').value = name;
    }

</script>