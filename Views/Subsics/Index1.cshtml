@model IEnumerable<Fitness_Center.Models.Subsic>
@{
    Layout = "~/Views/Shared/_AdminDashbord.cshtml";
}

<h3>All Subscription</h3>

<!-- Date Filter Form -->
<form method="get" action="@Url.Action("Index1", "Subsics")">
    <div class="form-row">
        <div class="col">
            <label for="StartDate">Start Date</label>
            <input type="date" class="form-control" id="StartDate" name="StartDate" value="@ViewData["StartDate"]" />
        </div>
        <div class="col">
            <label for="EndDate">End Date</label>
            <input type="date" class="form-control" id="EndDate" name="EndDate" value="@ViewData["EndDate"]" />
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary mt-4">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <td colspan="5"><strong>Total Subscriptions:</strong></td>
            <td>@Model.Count()</td>
        </tr>
        <tr>
            <td colspan="5"><strong>Total Revenue:</strong></td>
            <td>@Model.Sum(s => s.Totalamount)</td>
        </tr>
        <a href="/Admin/Index">
            <button class="btn btn-outline-primary">Back</button>
        </a>
        <tr>
            <th>ID</th>
            <th>Plan Name</th>
            <th>Number of Months</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subsic in Model)
        {
            <tr>
                <td>@subsic.Id</td>
                <td>@subsic.Plan?.Planname</td>
                <td>@subsic.NumOfMonths</td>
                <td>@subsic.Startdate?.ToString("MM-dd-yyyy")</td>
                <td>@subsic.Enddate?.ToString("MM-dd-yyyy")</td>
                <td>@subsic.Totalamount</td>
            </tr>
        }
    </tbody>
</table>
